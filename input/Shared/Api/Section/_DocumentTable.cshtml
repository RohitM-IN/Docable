@inherits StatiqRazorPage<DocumentTable>

@{
    if(Model != null && Model.Documents != null && Model.Documents.Count > 0)
    {
        <text>
            <h1 id="@(Model.Title.Replace(" ", ""))">@Model.Title</h1>
            <div class="box">
                <div class="box-body no-padding table-responsive">
                    <table class="table table-striped table-hover @(Model.HasSummary ? "two-cols" : string.Empty)">
                        <thead>
                            <tr>
                                <th class="border-0">@Model.Header</th>
                                @if(Model.HasSummary)
                                {
                                    <th class="border-0">Summary</th>
                                }
                            </tr>
                        </thead>
                        @foreach(IDocument doc in Model.Documents)
                        {
                            <tr>
                                <td>@Context.GetTypeLink(doc, Model.LinkTypeArguments)</td>
                                @if(Model.HasSummary)
                                {
                                    <td>@Html.Raw(doc.GetString("Summary"))</td>
                                }
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </text>
    }
}